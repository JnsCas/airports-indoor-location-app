<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorInfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp"
            android:textStyle="bold">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".15"
                android:layout_gravity="center_vertical"
                android:paddingRight="15dp"
                app:srcCompat="@drawable/beacon_mint_small"
                tools:ignore="DuplicateIds,NestedWeights" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".85"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Estado zonas de embarque"
                android:textStyle="bold"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".15"
                android:paddingRight="15dp"
                app:srcCompat="@drawable/icons8_usergroups"
                tools:ignore="NestedWeights" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".55"
                android:gravity="center_vertical"
                android:text="Cantidad de personas en la puerta de embarque 1"
                android:textSize="15dp"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/info_people_quantity_result1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:gravity="center_vertical"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".15"
                android:paddingRight="15dp"
                app:srcCompat="@drawable/icons8_usergroups"
                tools:ignore="NestedWeights" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".55"
                android:gravity="center_vertical"
                android:text="Cantidad de personas en la puerta de embarque 2"
                android:textSize="15dp"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/info_people_quantity_result2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:gravity="center_vertical"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".15"
                android:paddingRight="15dp"
                app:srcCompat="@drawable/icons8_queue"
                tools:ignore="NestedWeights" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".55"
                android:gravity="center_vertical"
                android:text="Espera actual en la puerta de embarque 1"
                android:textSize="15dp"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/info_duracion_estadia1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:gravity="center_vertical"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".15"
                android:paddingRight="15dp"
                app:srcCompat="@drawable/icons8_queue"
                tools:ignore="NestedWeights" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".55"
                android:gravity="center_vertical"
                android:text="Espera actual en la puerta de embarque 2"
                android:textSize="15dp"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/info_duracion_estadia2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:gravity="center_vertical"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>