<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_support"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aeropuerto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="afinal.proyecto.cuatro.grupo.airportsindoorlocationapp.activities.UserSupportActivity">

    <!--TODO: Eliminar este TextView !-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="TODO: Acá iría un Spinner para seleccionar la Aerolinea.\n Aerolínea Seleccionada: Aerolíneas Argentinas." />
    <!---->

    <EditText
        android:id="@+id/usersupport_nro_vuelo_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="@string/usersupport_nro_vuelo" />

    <EditText
        android:id="@+id/usersupport_date_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="DD/MM/AAAA" />

    <Button
        android:id="@+id/usersupport_buscar_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="@string/usersupport_buscar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- SALIDA -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/usersupport_salida"
            android:textSize="18sp"
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/usersupport_result_salida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- LLEGADA -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/usersupport_llegada"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usersupport_result_llegada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- ESTADO DE VUELO -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/usersupport_estado_de_vuelo"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usersupport_result_estado_de_vuelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>


</LinearLayout>
