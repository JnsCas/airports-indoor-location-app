<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginVertical="20dp"
        app:srcCompat="@drawable/beacon_grey_small"
        android:contentDescription="@string/bway" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:hint="@string/signin_nombre"
        android:layout_gravity="center_horizontal"
        android:id="@+id/signin_nombre_et"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center_horizontal"
        android:hint="Email"
        android:id="@+id/signin_email_et"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center_horizontal"
        android:hint="@string/signin_contraseÃ±a"
        android:id="@+id/signin_contrasena_et"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:hint="@string/confirmar_contrase_a"
        android:layout_gravity="center_horizontal"
        android:id="@+id/signin_confirmar_contrasena_et"
        android:inputType="textPassword" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarme"
        android:background="@color/colorButton"
        android:textColor="@color/colorButtonText"
        android:layout_marginVertical="20dp"
        android:id="@+id/signin_registrar_usuario_btn" />


</LinearLayout>
