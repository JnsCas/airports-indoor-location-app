<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="afinal.proyecto.cuatro.grupo.airportsindoorlocationapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/beacon_grey_small"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SignInActivity" android:label="SignIn"/>
        <activity android:name=".activities.HomeActivity" android:label="Home"/>
        <activity android:name=".activities.UserSupportActivity" android:label="UserInformation"/>
        <activity android:name=".activities.MapaActivity" android:label="WayFinding"/>
        <activity android:name=".activities.DestinoActivity" />
        <activity android:name=".activities.InfoActivity" />
        <activity android:name=".activities.CargarVueloActivity" />
        <activity android:name=".activities.LoginActivity" android:label="LogIn"/>
        <activity android:name=".activities.NotificationActivity" android:label="PushNotification"></activity>
    </application>

</manifest>